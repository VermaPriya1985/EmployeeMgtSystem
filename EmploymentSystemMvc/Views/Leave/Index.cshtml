@model List<EmployeeSystem.Models.Leave>
<h2>List of Leaves</h2>
<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">From Date</th>
                <th scope="col">To Date</th>
                <th scope="col">Leave Type</th>
                <th scope="col">Reason</th>
                <th scope="col">Leave Status</th>
            </tr>
        </thead>
        <tbody>
        @for(int i = 0; i < Model.Count; i++) 
        {
            <tr>
                <td>@Model[i].FromDate</td>
                <td>@Model[i].ToDate</td>
                <td>@Model[i].LeaveType</td>
                <td>@Model[i].Reason</td> 
                <td>@Model[i].LeaveStatus</td> 
               <!--   <td>
                    <a asp-action="Edit" asp-route-id="@Model[i].LeaveId">Edit Concern</a>
                </td>-->
            
            </tr>
        }
        </tbody>
    </table>
    <div>
        <a asp-action="Form">New Leave</a>
    </div>

</div>