@model LeaveViewModel
@{
    string pageTitle = "New Leave";
    string action = "Create";

    if (ViewBag.IsEditing == true) 
    {
        // Editing
        pageTitle = "Update Concern";
        action = "Update";
    }
}
<div>
    <h2>@pageTitle</h2>
    <hr/>
    <div>
        <form asp-action="@action">
            <input type="hidden" asp-for="LeaveId"/>

            <div class="form-group">
                <label asp-for="FromDate">From Date</label>
                <input type="date" class="form-control" asp-for="FromDate">
                <span class="text-danger" asp-validation-for="FromDate"></span>
            </div>
          
          <div class="form-group">
                <label asp-for="ToDate">To Date</label>
                <input type="date" class="form-control" asp-for="ToDate">
                <span class="text-danger" asp-validation-for="ToDate"></span>
            </div>
          

            <div class="form-group">
                <label asp-for="LeaveType">Leave Type</label>
                <select id="dropdowntype" class="form-control" asp-for="LeaveType">
                    <option value="SickLeave">SickLeave</option>
                    <option value="UrgentLeave">UrgentLeave</option>
                </select>
                <span class="text-danger" asp-validation-for="LeaveType"></span>
            </div>

            <div class="form-group">
                <label asp-for="Reason">Reason</label>
                <textarea class="form-control" asp-for="Reason" rows="4" cols="50"></textarea>
                <!--<input type="text" class="form-control" height="100" asp-for="Reason">-->
                <span class="text-danger" asp-validation-for="Reason"></span>
            </div>
           
            
            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>
    <br/>
    <div>
        <a asp-action="Index">Back to List</a> 
    </div>
</div>
