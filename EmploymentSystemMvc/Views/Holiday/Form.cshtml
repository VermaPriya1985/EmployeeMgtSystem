@model HolidayViewModel
@{
    string pageTitle = "New Holiday";
    string action = "Create";

    if (ViewBag.IsEditing == true) 
    {
        // Editing
        pageTitle = "Update Holiday";
        action = "Update";
    }
}
<div>
    <h2>@pageTitle</h2>
    <hr/>
    <div>
        <form asp-action="@action">
            <input type="hidden" asp-for="HolidayId"/>
            <div class="form-group">
                <label asp-for="FromDate">From Date</label>
                <input type="date" class="form-control" asp-for="FromDate">
                <span class="text-danger" asp-validation-for="FromDate"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDate">To Date</label>
                <input type="date" class="form-control" asp-for="ToDate">
                <span class="text-danger" asp-validation-for="ToDate"></span>
            </div>
            <div class="form-group">
                <label asp-for="HolidayName">Holiday</label>
                <input type="text" class="form-control" asp-for="HolidayName">
                <span class="text-danger" asp-validation-for="HolidayName"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Comments">Comments</label>
                <input type="text" class="form-control" asp-for="Comments">
                <span class="text-danger" asp-validation-for="Comments"></span>
            </div>
           
            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>
    <br/>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
