@model List<EmployeeSystem.Models.Concern>
<h2>List of Concerns</h2>
<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Concern Date</th>
                <th scope="col">Concern Type</th>
                <th scope="col">Remarks</th>
                <th scope="col">Concern Status</th>
                <!--<th scope="col"></th>-->
            </tr>
        </thead>
        <tbody>
        @for(int i = 0; i < Model.Count; i++) 
        {
            <tr>
                <td>@Model[i].ConcernDate</td>
                <td>@Model[i].ConcernType</td>
                <td>@Model[i].Remarks</td>
                <td>@Model[i].ConcernStatus</td> 
               <!--   <td>
                    <a asp-action="Edit" asp-route-id="@Model[i].ConcernId">Edit Concern</a>
                </td>-->
            
            </tr>
        }
        </tbody>
    </table>
    <div>
        <a asp-action="Form">New Concern</a>
    </div>

</div>