@model ConcernViewModel
@{
    string pageTitle = "New Concern";
    string action = "Create";

    /*if (ViewBag.IsEditing == true) 
    {
        // Editing
        pageTitle = "Update Concern";
        action = "Update";
    }*/
}
<div>
    <h2>@pageTitle</h2>
    <hr/>
    <div>
        <form asp-action="@action">
            <input type="hidden" asp-for="ConcernId"/>
            <div class="form-group">
                <label asp-for="ConcernType">Concern Type</label>
                <select id="dropdowntype" class="form-control" asp-for="ConcernType">
                    <option value="Suggestion">Suggestion</option>
                    <option value="Complaint">Complaint</option>
                </select>
                <span class="text-danger" asp-validation-for="ConcernType"></span>
            </div>

            <div class="form-group">
                <label asp-for="Remarks">Remarks</label>
                <input type="text" class="form-control" height="100" asp-for="Remarks">
                <span class="text-danger" asp-validation-for="Remarks"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="ConcernStatus">Concern Status</label>
                <select id="dropdowntype" class="form-control" asp-for="ConcernStatus">
                    <option value="Open">Open</option>
                    <option value="Closed">Closed</option>
                </select>
                <span class="text-danger" asp-validation-for="ConcernType"></span>
            </div>

            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>
    <br/>
    <div>
        <a asp-action="Index">Back to List</a> 
    </div>
</div>
